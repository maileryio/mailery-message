{
    "name": "maileryio/mailery-message",
    "type": "library",
    "description": "Message module for Mailery Platform",
    "keywords": [
        "mail",
        "mailer",
        "message"
    ],
    "homepage": "https://github.com/maileryio/mailery-message",
    "license": "BSD-3-Clause",
    "support": {
        "source": "https://github.com/maileryio/mailery-message",
        "issues": "https://github.com/maileryio/mailery-message/issues",
        "wiki": "https://github.com/maileryio/mailery-message/wiki"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4",
        "foxy/foxy": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phan/phan": "^2.4",
        "friendsofphp/php-cs-fixer": "^2.16"
    },
    "autoload": {
        "psr-4": {
            "Mailery\\Message\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mailery\\Message\\Tests\\": "tests"
        }
    },
    "scripts": {
        "lint": "php-cs-fixer fix --diff --dry-run",
        "fix": "php-cs-fixer fix",
        "phan": "phan --progress-bar -o analysis.txt"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        },
        "config-plugin": {
            "params": "config/params.php",
            "common": "config/common.php"
        }
    },
    "config": {
        "sort-packages": true
    }
}
